<h1><%="Состав #{@group['title']}"%></h1>

<%= link_to 'Добавить', new_member_path %>

<br/><br/>

<table>
  <thead>
    <tr>
      <th>Участник</th>
      <th>Амплуа</th>
      <th>Возраст</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member['name'] %></td>
        <td><%= member['role'] %></td>
        <td><%= Time.now.year - member['birth_date'].to_date.year %></td>
        <td><%= link_to 'Изменить', edit_member_path(member['id']) %></td>
        <td><%= link_to 'Удалить', member_path(member['id']), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'Назад', group_path(@group['id']) %>